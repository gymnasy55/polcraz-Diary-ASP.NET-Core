@model RegisterViewModel

<form class="form-signin text-center" method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <h1 class="h3 mb-3 font-weight-normal">Регистрация</h1>
    <div>
        <input class="form-control" placeholder="Email" type="email" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <input class="form-control" placeholder="Пароль" type="password" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <input class="form-control" placeholder="Повторите пароль" type="password" asp-for="PasswordConfirm" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary w-100">Зарегистрироваться</button>
    </div>
</form>