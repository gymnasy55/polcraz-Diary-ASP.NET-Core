@model LoginViewModel

<form class="form-signin text-center" method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <h1 class="h3 mb-3 font-weight-normal">Войти в аккаунт</h1>
    <div class="">
        <input class="form-control" placeholder="Email" type="email" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="">
        <input class="form-control" placeholder="Пароль" type="password" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="checkbox mb-3">
        <label>
            <input asp-for="RememberMe"> Запомнить меня?
        </label>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary w-100">Войти</button>
    </div>
</form>