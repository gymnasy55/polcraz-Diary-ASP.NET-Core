@model Note
@{
    string strTitle = "Редактировать заметку";
    ViewBag.Title = strTitle;
}
<script src="~/js/ckeditor/ckeditor.js"></script>

<form asp-area="" asp-controller="Note" asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="DateAdded" />
    <input type="hidden" asp-for="UserId"/>

    <h1 class="h3 mb-3 font-weight-normal">@strTitle</h1>
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
    <div>
        <label asp-for="Text"></label>
        <textarea asp-for="Text"></textarea>
        <span asp-validation-for="Text"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary w-100">Сохранить</button>
    </div>
</form>

<script>
    window.onload = function() {
        var newCKEdit = CKEDITOR.replace('@Html.IdFor(x=>x.Text)');
    }
</script>